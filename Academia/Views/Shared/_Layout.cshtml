    <script>
        function showPasswordChecked(checkbox) {
            document.getElementById('password').type = checkbox.checked ? 'text' : 'password';
            document.getElementById('conpassword').type = checkbox.checked ? 'text' : 'password';
        }

        @TempData["TimeOut"];
        let seconds = 30;
        function OtpRequest() {
            setInterval(() => {
                if (seconds > 0) {
                    seconds--;
                    document.getElementById('button').disabled = true;
                    document.getElementById('seconds').hidden = false;
                }
                else if (seconds == 0) {
                    document.getElementById('button').disabled = false;
                    document.getElementById('seconds').hidden = true;
                }
                document.getElementById('seconds').innerText = padZero(seconds);
            }, 1000);

            function padZero(time) {
                return (time < 10 ? '0' : '') + time;
            }
        }
    </script>

